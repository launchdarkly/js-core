{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    // Uses "." so it can load package.json.
    "rootDir": ".",
    "skipLibCheck": true,
    // enables importers to jump to source
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2017",
    "types": ["node", "jest"],
    "allowJs": true
  },
  "exclude": [
    "__tests__",
    "dist",
    "docs",
    "example",
    "node_modules",
    "babel.config.js",
    "jest.config.ts",
    "jestSetupFile.ts",
    "**/*.test.ts*"
  ]
}
