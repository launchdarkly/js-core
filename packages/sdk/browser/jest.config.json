{
  "verbose": true,
  "testEnvironment": "jest-environment-jsdom",
  "testPathIgnorePatterns": [
    "./dist",
    "./src"
  ],
  "testMatch": [
    "**.test.ts"
  ],
  "setupFiles": [
    "./setup-jest.js"
  ],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "tsConfig": "tsconfig.test.json"
      }
    ],
    "^.+.tsx?$": [
      "ts-jest",
      {}
    ]
  }
}
