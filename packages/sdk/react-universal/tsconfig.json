{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es6", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    // Uses "." so it can load package.json.
    "rootDir": ".",
    "skipLibCheck": true,
    // enables importers to jump to source
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2017",
    "types": ["jest", "node", "react/canary"],
    "jsx": "react"
  },
  "exclude": ["**/*.test.ts", "dist", "node_modules", "__tests__", "example", "contract-tests"]
}
