{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2017",
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, // enables importers to jump to source
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/*.test.ts", "dist", "node_modules", "__tests__"]
}
