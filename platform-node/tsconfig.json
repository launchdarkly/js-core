{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es6",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "strict": true,
    "noImplicitOverride": true,
    // Needed for CommonJS modules: markdown-it, fs-extra
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, // enables importers to jump to source
    "resolveJsonModule": true,
    "stripInternal": true
  },
}
